                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/student_info_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JLPT Level" />

                    <TextView
                        android:id="@+id/jlpt"
                        style="@style/student_info_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    style="@style/student_info_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Have Completed any Internship?" />

                <TextView
                    android:id="@+id/internship_ans"
                    style="@style/student_info_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/internship_details_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        style="@style/student_info_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Company" />

                    <TextView
                        android:id="@+id/company_name"
                        style="@style/student_info_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        style="@style/student_info_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Position" />

                    <TextView
                        android:id="@+id/position"
                        style="@style/student_info_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        style="@style/student_info_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duration" />

                    <TextView
                        android:id="@+id/duration"
                        style="@style/student_info_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <TextView
                    style="@style/student_info_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do you have Certificates?" />

                <TextView
                    android:id="@+id/certificated_ans"
                    style="@style/student_info_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/certificate_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/student_info_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Certificates" />

                    <TextView
                        android:id="@+id/certificate"
                        style="@style/student_info_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/action_button"
        style="@style/Widget.Material3.FloatingActionButton.Large.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:backgroundTint="@color/green"
        android:text="Action"
        android:visibility="gone"
        android:textColor="@color/white"
        app:icon="@drawable/ic_baseline_filter_list_24"
        app:iconTint="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:elevation="3dp"
        android:id="@+id/verification_module"
        android:visibility="gone"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:id="@+id/corrections"
            android:textColor="@color/red"
            app:strokeColor="@color/fargrey"
            android:fontFamily="@font/product_sans_regular"
            android:insetTop="0dp"
            android:insetBottom="1dp"
            android:letterSpacing="0"
            android:text="Mark Corrections"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="10dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/product_sans_regular"
            android:insetTop="1dp"
            android:insetBottom="1dp"
            android:id="@+id/verified"
            android:letterSpacing="0"
            android:text="Mark Verified"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="10dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:elevation="3dp"
        android:visibility="gone"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:weightSum="3">

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:id="@+id/suspend"
            android:backgroundTint="@color/red"
            android:fontFamily="@font/product_sans_regular"
            android:insetTop="0dp"
            android:insetBottom="1dp"
            android:letterSpacing="0"
            android:text="Susupend"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:cornerRadius="10dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:fontFamily="@font/product_sans_regular"
            android:insetTop="1dp"
            android:insetBottom="1dp"
            android:id="@+id/freeze"
            android:letterSpacing="0"
            android:text="Freeze"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:cornerRadius="10dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/product_sans_regular"
            android:insetTop="1dp"

            android:insetBottom="1dp"
            android:id="@+id/active"
            android:letterSpacing="0"
            android:text="Active"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:cornerRadius="10dp" />


    </LinearLayout>

</RelativeLayout>