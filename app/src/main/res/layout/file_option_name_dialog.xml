                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sem5_chip"
                android:text="Sem 5" />

            <com.google.android.material.chip.Chip
                style="@style/chipStyle"
                android:layout_width="wrap_content"
                android:id="@+id/sem6_chip"
                android:layout_height="wrap_content"
                android:text="Sem 6" />

            <com.google.android.material.chip.Chip
                style="@style/chipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sem7_chip"
                android:text="Sem 7" />

            <com.google.android.material.chip.Chip
                style="@style/chipStyle"
                android:layout_width="wrap_content"
                android:id="@+id/sem8_chip"
                android:layout_height="wrap_content"
                android:text="Sem 8" />
            <com.google.android.material.chip.Chip
                style="@style/chipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hsc_gap_chip"
                android:text="HSC to Degree gap" />

            <com.google.android.material.chip.Chip
                style="@style/chipStyle"
                android:layout_width="wrap_content"
                android:id="@+id/engineering_gap_chip"
                android:layout_height="wrap_content"
                android:text="Engineering Gap" />
            <com.google.android.material.chip.Chip
                style="@style/chipStyle"
                android:layout_width="wrap_content"
                android:id="@+id/engineering_gap_years_chip"
                android:layout_height="wrap_content"
                android:text="Engineering Gap in years" />

            <com.google.android.material.chip.Chip
                style="@style/chipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/placed_chip"
                android:text="Placed" />
            <com.google.android.material.chip.Chip
                style="@style/chipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/placed_company_name_chip"
                android:text="Placed Company Name" />

            <com.google.android.material.chip.Chip
                style="@style/chipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/placed_company_location_chip"
                android:text="Placed Company Location" />

            <com.google.android.material.chip.Chip
                style="@style/chipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/placed_company_package_chip"
                android:text="Placed Company Packaged" />

            <com.google.android.material.chip.Chip
                style="@style/chipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/interview_date_chip"
                android:text="Interview Date" />

            <com.google.android.material.chip.Chip
                style="@style/chipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/joining_date_chip"
                android:text="Joining Date" />

            <com.google.android.material.chip.Chip
                style="@style/chipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/offer_letter_chip"
                android:text="Offer Letter" />

            <com.google.android.material.chip.Chip
                style="@style/chipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/japanese_chip"
                android:text="Japanese Certifications done" />

            <com.google.android.material.chip.Chip
                style="@style/chipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jlpt_chip"
                android:text="Japanese Level" />

            <com.google.android.material.chip.Chip
                style="@style/chipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/internship_chip"
                android:text="Internship present" />

            <com.google.android.material.chip.Chip
                style="@style/chipStyle"
                android:layout_width="wrap_content"
                android:id="@+id/certifications_chip"
                android:layout_height="wrap_content"
                android:text="Certifications present" />






        </com.google.android.material.chip.ChipGroup>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>